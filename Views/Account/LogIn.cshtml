@model SafeSkies.Models.ViewModels.LoginViewModel

<div class="hero-section text-white">
<h2 class="mt-4">Log In</h2>

<form asp-action="Login" method="post">
        <!--after testing, adding these to dispaly message-->
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mt-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-light mt-3">Log In</button>
</form>

<div class="mt-4">
    <p>Don’t have an account? <a asp-controller="Account" asp-action="Register">Register here for free</a></p>
</div>
</div>
<!--after testing, adding these to dispaly message-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
