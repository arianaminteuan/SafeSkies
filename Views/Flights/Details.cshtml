@model SafeSkies.Models.Flight

<h2 class="mt-3">Flight Details</h2>

<div class="card mt-4 p-4">
    <h4>@Model.Airline</h4>
    <p><strong>From:</strong> @Model.Departure</p>
    <p><strong>To:</strong> @Model.Destination</p>
    <p><strong>Departure:</strong> @Model.DepartureTime.ToString("g")</p>
    <p><strong>Arrival:</strong> @Model.ArrivalTime.ToString("g")</p>
    <p><strong>Price:</strong> €@Model.Price</p>
    <p><strong>Seats Left:</strong> @Model.SeatsAvailable</p>
</div>

<a asp-action="Index" class="btn btn-outline-primary mt-3">Back to Flights</a>
