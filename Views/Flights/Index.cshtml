@model IEnumerable<SafeSkies.Models.Flight>
<div class="text-white">
<h2>Available Flights</h2>
</div>
<a asp-action="Create" class="btn btn-secondary mb-3">+ Add New Flight</a>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Departure</th>
            <th>Destination</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Price (€)</th>
            <th>Seats Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.Airline</td>
                <td>@flight.Departure</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime.ToString("g")</td>
                <td>@flight.ArrivalTime.ToString("g")</td>
                <td>@flight.Price</td>
                <td>@flight.SeatsAvailable</td>
                <td>
                    <a asp-action="Details" asp-route-id="@flight.Id" class="btn btn-secondary btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@flight.Id" class="btn btn-sm btn-warning ms-2">Edit</a>
                    <a asp-action="Delete" asp-route-id="@flight.Id" class="btn btn-sm btn-danger ms-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
