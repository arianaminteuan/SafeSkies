@model SafeSkies.Models.Flight

<h2 class="mt-3 text-danger">Are you sure you want to delete this flight?</h2>

<div class="mt-4 border p-3">
    <h4>@Model.Airline</h4>
    <p><strong>From:</strong> @Model.Departure</p>
    <p><strong>To:</strong> @Model.Destination</p>
    <p><strong>Departure:</strong> @Model.DepartureTime.ToString("g")</p>
    <p><strong>Arrival:</strong> @Model.ArrivalTime.ToString("g")</p>
    <p><strong>Price:</strong> €@Model.Price</p>
    <p><strong>Seats:</strong> @Model.SeatsAvailable</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
