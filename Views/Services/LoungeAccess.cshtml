@{
    ViewData["Title"] = "Lounge Access";
}
<div class="container mt-5 text-white">
    <h2 class="mb-4">Lounge Access</h2>
    <p>Relax before your flight in one of our premium lounges worldwide.</p>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <!-- Example Lounge Card -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/images/photo8.jpg" class="card-img-top" alt="Lounge Image">
                <div class="card-body">
                    <h5 class="card-title">Barcelona Terminal 5 Lounge</h5>
                    <p class="card-text">
                        Enjoy complimentary refreshments, high-speed Wi-Fi, showers, and comfortable seating.
                    </p>
                </div>
                <div class="card-footer text-end">
                    <a href="#" class="btn btn-primary">Request Access</a>
                </div>
            </div>
        </div>

        <!-- Repeat cards for other lounges -->
    </div>
